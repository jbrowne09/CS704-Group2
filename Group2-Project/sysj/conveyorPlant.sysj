conveyorPlant(
		input signal motor, enable;
		output signal bottleLeft5, bottlePos1, bottlePos5, motorS;
		)
->
{
	new Thread(new conveyorGUI()).start();
	
	{//Motor
		while(true){
			abort(enable && motor) {
				halt;
			}
			abort (!motor) {
				sustain motorS;
			}
		}
	}
	||
	{
		while(true){
			abort(enable && motor) {
				halt;
			}
			abort(enable){
				sustain bottlePos1;
			}
			abort(enable && motor){
				sustain bottlePos5;
			}
		}
	}
}