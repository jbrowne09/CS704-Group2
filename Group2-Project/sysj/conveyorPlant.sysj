conveyorPlant(
		input signal motor, enable;
		output signal bottleLeft5, bottlePos1, bottlePos5, motorS;
		)
->
{
	new Thread(new conveyorGUI()).start();
	
	{//Motor
		while(true){
			await(motor);
			abort (!motor) {
				sustain motorS;
			}
		}
	}
	||
	{
		while(true){
			await(enable);
			await(!enable);
			abort(enable){
				sustain bottlePos1;
			}
			await(!enable);
			abort(enable){
				sustain bottlePos5;
			}
			await(!enable);
			sustain bottleLeft5;
		}
	}
}