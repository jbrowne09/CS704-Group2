capperController(
    input signal gripperLowered, gripperLifted, gripperInit, gripperTurned, bottleClamped, bottlePos4, capperEnable, tick;
    output signal clampBottle, gripCap, gripDown, twistGrip, untwistGrip, capperDone;
)

->{
	while(true){
		//await(capperEnable);
		//await(bottlePos4);		
		await(tick);
		emit gripDown;
		emit clampBottle;
		await(tick);
		emit gripCap;
		await(tick);
		emit twistGrip;
		await(tick);
		emit untwistGrip;		
	}
}