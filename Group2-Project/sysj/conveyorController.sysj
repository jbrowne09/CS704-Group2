conveyorController(
    input signal bottleLeft5, bottlePos1, bottlePos5, conveyorEnable;
    output signal motor, conveyorDone;
)

->{
	while(true){
		await(conveyorEnable);
		System.out.println("in conveyor");
	 {
		abort(bottlePos1){
			sustain motor;	
		}
		emit conveyorDone;
	 }
	 ||
	 {
		await(bottlePos5);
		abort(bottleLeft5){
			sustain motor;
		}
		emit conveyorDone;
	 }
	}
}