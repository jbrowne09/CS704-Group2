conveyorController(
    input signal bottleLeft5, bottlePos1, bottlePos5, request;
    output signal motor;
)


->{
	while(true){
		await(request);
		abort(bottlePos1){
			System.out.println("Pos1");
			sustain motor;	
		}
		System.out.println("wait");
		await(bottlePos5);
		abort(bottleLeft5){
			System.out.println("Pos2");
			sustain motor;
		}
	}
}

