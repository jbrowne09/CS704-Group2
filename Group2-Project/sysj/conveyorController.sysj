conveyorController(
    input signal bottleLeft5, bottlePos1, bottlePos5, conveyer_enable;
    output signal motor, conveyerDone;
)

->{
	while(true){
		await(conveyer_enable);
	 {
		abort(bottlePos1){
			sustain motor;	
		}
		emit conveyerDone;
	 }
	 ||
	 {
		await(bottlePos5);
		abort(bottleLeft5){
			sustain motor;
		}
		emit conveyerDone;
	 }
	}
}