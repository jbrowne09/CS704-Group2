mainController(
    input signal conveyerDone, rotaryDone, capperDone, request, enable;
    output signal conveyerEnable, rotaryEnable, capperEnable, fillerEnable; //To controllers
)

->{
	while(true){
		await(request);
		abort(conveyerDone) {
			sustain conveyerEnable;
		}
		abort(rotaryDone) {
			sustain rotaryEnable;
		}
		abort(capperDone) {
			sustain capperEnable;
		}
	}
}

