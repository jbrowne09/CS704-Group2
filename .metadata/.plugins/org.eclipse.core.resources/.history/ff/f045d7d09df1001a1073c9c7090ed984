package org.compsys704;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JPanel;

//LEGACY FILE: no longer used

public class customActionListener implements ActionListener{
	//public conveyorCanvas canvas;
	private systemCanvas canvas;
	private String name;
	
	public customActionListener(JPanel canvas, String name) {
		this.canvas = (systemCanvas)canvas;
		this.name = name;
	}
	
	public void actionPerformed(ActionEvent e) {
		this.canvas.updateSignals(this.name, true);
	}
}
